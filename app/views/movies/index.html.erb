

<div class="container">
  <%= search_form_for @q do |f|%>
    <%= f.label :title_cont,"動画教材タイトル" %>
    <%= f.search_field :title_cont %>
    <%= f.submit "検索"%>
  <% end %>
  <div class="row">
    <%@movies.each.with_index(@movies.offset_value + 1) do |movie,i|%>
      <div class="col-sm-6 col-lg-4 card-columns card-deck" >
        <div class="card " style="width: 25rem;">
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="<%=movie.url%>" allowfullscreen></iframe>
          </div>
          <div class="card-body" style="height: 15rem;">
            <h4 class="card-text">Lv.<%= i %>：<%= movie.title %></h4>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @movies %>
  </div>
</div>




